    <!--    Second Draft barcode Template-->
    <template id="asset_management_qr_code_template">
        <t t-call="web.basic_layout">
            <div class="page">
                <t t-foreach="docs" t-as="asset">
                    <div style="width: 32%; display: inline-table; height: 10rem;">
                        <table class="table table-bordered mb-0" style="border: 2px solid black !important;">

                            <tr>
                                <td class="text-center align-middle" style="height: 6rem;">
                                    <span style="font-size: 13px"><strong>Property of Good Neighbours Tanzania</strong></span>
                                    <img alt="Barcode" t-if="len(asset.code) == 13"
                                         t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN13', quote_plus(asset.name or ''), 600, 150)"
                                         style="width:100%;height:4rem;"/>
                                    <img alt="Barcode" t-elif="len(asset.code) == 8"
                                         t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN8', quote_plus(asset.name  or ''), 600, 150)"
                                         style="width:100%;height:4rem;"/>
                                    <img alt="Barcode" t-else=""
                                         t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', quote_plus(asset.name or ''), 600, 150)"
                                         style="width:100%;height:4rem"/>
                                    <span t-field="asset.code"/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </t>
            </div>
        </t>
    </template>

